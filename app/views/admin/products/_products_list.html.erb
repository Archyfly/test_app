<div id="box-container">
  <% @products.each do |product| %>
    <div id="box-container">
      <div class="card" style="width: 18rem;">
        <!img src="/download.jpeg" class="card-img-top" alt="<%= product.description %>">
        <%= image_tag(product.image.url, alt: "Image") if product.image? %>
        <div class="card-body">
          <h5 class="card-title"><%= product.action_category.name.capitalize %></h5>
            <%= product.title %></h5>
            <p class="card-text"><%= product.description %></p>
            <h5>Цена: <%= product.price %><br/></h5>
          Размещено: <%= product.created_at.strftime("%d/%m/%Y %I:%M %p") %><br/>
          <%# product.updated_at.gmtime %>
          Publisher is: <%= product.user.name %><br>

          <%= link_to "Пыдробнее...", admin_product_path(product), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>

</div>

