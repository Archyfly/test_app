<div class="container mt-3">
<%= simple_form_for [:admin, @product], local: true do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
    <%= f.input :price %>
    <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true %>
    <%= f.collection_select :action_category_id, ActionCategory.all, :id, :name, prompt: true %>
    <%= f.collection_select :user_id, User.all, :id, :name, prompt: true %>
    <%= f.button :submit, class: "btn-primary" %>

    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
<% end %>
</div>